<!DOCTYPE html>
<html lang="en">
	<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>E Commerce Dashboard</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="~/css/products.css">
	</head>
    <body>
        @model ProductViewModel
        <div class="header">
            <h3><a href="/dashboard">DASHBOARD</a>||<a href="/products">PRODUCTS</a>||<a href="/orders">ORDERS</a>||<a href="/customers">CUSTOMERS</a>||</h3>
        </div>

        <div class="container">
            <form asp-action="CreateProduct" asp-controller="Home" method="post">
                <h3>Add a New Product</h3>

                
                <label asp-for="newProduct.Name">Product Name</label>
                <input type="text" asp-for="newProduct.Name">

                
                <label asp-for="newProduct.Url">Image (url):</label>
                <input type="text" asp-for="newProduct.Url">

                
                <label asp-for="newProduct.Description">Description:</label>
                <textarea asp-for="newProduct.Description"></textarea>

                
                <label asp-for="newProduct.Quantity">Quantity:</label>
                <input type="number" asp-for="newProduct.Quantity">

                <input class="button" type="submit" value="Add">
            </form>
        </div>

        <div class="product">
            @foreach(Product product in Model.Products){
                <div class="item">
                    <img src="@product.Url" alt="@product.Name">
                    <p>@product.Name</p>
                    <p>(@product.Quantity left)</p>
                </div>
            }
        </div>

    </body>
</html>